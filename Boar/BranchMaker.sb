Sub DrawArc
  For a = a1 To a2 Step da
    _a = Math.GetRadians(a)
    x2 = ox + r * Math.Cos(_a)
    y2 = oy + r * Math.Sin(_a)
    If a <> a1 Then
      Shapes_AddLine()
    EndIf
    x1 = x2
    y1 = y2
  EndFor
EndSub

