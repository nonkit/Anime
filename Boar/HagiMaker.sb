GraphicsWindow.Title = "Japanese Clobers Maker 0.1"
Init()
flower = "True"
x = 100
y = 100
pw = 1
width = 12
If flower Then
  height = 15
  stem = 15
  pc = "Black"
  bc = "Red"
  top = "False"
  bottom = "True"
  center = "False"
  DrawLeaf()
Else
  height = 20
  stem = 10
  pc = "Black"
  bc = "#333333"
  top = "True"
  bottom = "True"
  center = "True"
  DrawLeaf()
EndIf
Shapes_Normalize()
Shapes_DumpArray()

Sub DrawLeaf
  sqr2 = Math.SquareRoot(2)
  tw = width / sqr2
  th = height / sqr2 / 2
  _bc = bc
  _pc = pc
  _pw = pw
  _x = x
  _y = x
  x = _x - width / 2
  y = _y - height / 2
  Shapes_AddEllipse()
  x1 = tw / 2
  y1 = 0
  x2 = 0
  y2 = th
  x3 = tw
  y3 = th
  s = Math.SquareRoot(width * width + height * height)
  w = pw * width / s
  h = pw * height / s
  If top Then
    pw = 0
    angle = 0
    x = _x - tw / 2
    y = _y - th * 2
    ty = y + h
    Shapes_AddTriangle()
    pw = _pw
    y1 = h
    x2 = w / 2
    y2 = th + h / 2
    Shapes_AddLine()
    x2 = tw - w / 2
    Shapes_AddLine()
    bc = _pc
    pw = 0
    x1 = w
    y1 = 0
    x2 = 0
    y2 = h
    x3 = 2 * w
    y3 = h
    x = _x - w
    Shapes_AddTriangle()
  Else
    ty = _y - height / 2 + pw / 2
  EndIf
  bc = _bc
  x1 = tw / 2
  y1 = 0
  x2 = 0
  y2 = th
  x3 = tw
  y3 = th
  If bottom Then
    angle = 180
    x = _x - tw / 2
    y = _y + th
    pw = 0
    Shapes_AddTriangle()
    angle = 0
    y1 = th - h
    x2 = w / 2
    y2 = -h / 2
    pw = _pw
    Shapes_AddLine()
    x2 = tw - w / 2
    y2 = -h / 2
    Shapes_AddLine()
    angle = 180
    pw = 0
    bc = _pc
    x1 = w
    y1 = 0
    x2 = 0
    y2 = h
    x3 = 2 * w
    y3 = h
    x = _x - w
    by = _y + 2 * th - h
    y = by
    Shapes_AddTriangle()
  Else
    by = _y + height / 2 - pw / 2
  EndIf
  pw = _pw
  angle = 0
  If center Or (0 < stem) Then
    x = _x
    If center Then
      y = ty
    Else
      y = by
    EndIf
    x1 = 0
    y1 = 0
    x2 = 0
    If center Then
      y2 = by - ty + stem
    Else
      y2 = stem
    EndIf
    Shapes_AddLine()
  EndIf
EndSub

