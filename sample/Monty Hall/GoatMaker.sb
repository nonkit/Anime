Sub DrawHorn
  ' param cx, cy - center
  ' param r1 - curve radius
  ' param r2, r3 - start and end radius of the horn width
  ' param a1, a2 - start and end angle
  ' param da - delta angle
  For a = a1 To a2 Step da
    k = (a - a1) / (a2 - a1)
    r = r2 * (1 - k) + r3 * k
    _a = Math.GetRadians(a)
    x = cx + r1 * Math.Cos(_a) - r
    y = cy + r1 * Math.Sin(_a) - r
    width = 2 * r
    height = 2 * r 
    Shapes_AddEllipse()
  EndFor
EndSub

